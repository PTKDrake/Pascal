root = true

[*]
ij_continuation_indent_size = 8
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_formatter_tags_enabled = false
ij_smart_tabs = false
ij_wrap_on_typing = false

[{*.pas,*.lpr,*.pp,*.inc,*.dpr}]
ij_pascal_blank_lines_after_class_header = 0
ij_pascal_blank_lines_after_imports = 1
ij_pascal_blank_lines_after_package = 1
ij_pascal_blank_lines_around_class = 1
ij_pascal_blank_lines_around_field = 0
ij_pascal_blank_lines_around_method = 1
ij_pascal_blank_lines_around_method_in_interface = 1
ij_pascal_blank_lines_before_imports = 1
ij_pascal_else_on_new_line = false
ij_pascal_keep_blank_lines_before_right_brace = 2
ij_pascal_keep_blank_lines_in_code = 2
ij_pascal_keep_blank_lines_in_declarations = 2
ij_pascal_keep_line_breaks = true
ij_pascal_keep_multiple_expressions_in_one_line = false
ij_pascal_keep_simple_blocks_in_one_line = false
ij_pascal_keep_simple_methods_in_one_line = false
ij_pascal_space_after_colon = true
ij_pascal_space_after_comma = true
ij_pascal_space_after_comma_in_type_arguments = true
ij_pascal_space_after_for_semicolon = true
ij_pascal_space_before_colon = false
ij_pascal_space_before_comma = false
ij_pascal_space_before_for_semicolon = false
ij_pascal_spaces_around_assignment_operators = true
ij_pascal_spaces_around_logical_operators = true
ij_pascal_spaces_within_brackets = false
ij_pascal_spaces_within_method_call_parentheses = false
ij_pascal_spaces_within_method_parentheses = false
ij_pascal_spaces_within_parentheses = false
ij_pascal_wrap_long_lines = false
